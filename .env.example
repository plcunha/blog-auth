# ========================================
# Blog Auth API - Environment Variables
# ========================================
# Copy this file to .env and fill in the values
# SECURITY: Never commit .env to version control

# Application
NODE_ENV=development
PORT=3000

# Database (also used by docker-compose.yaml)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=blog
DB_SYNCHRONIZE=false
MYSQL_ROOT_PASSWORD=change_me

# JWT Authentication
# REQUIRED: Both secrets must be set for the app to start
# Production: Use cryptographically strong random strings (256+ bits)
# Generate with: openssl rand -base64 64
JWT_SECRET=change-this-to-a-very-strong-random-secret
JWT_EXPIRATION=3600s
JWT_REFRESH_SECRET=change-this-to-another-strong-random-secret
JWT_REFRESH_EXPIRATION=7d

# CORS
# Production: Set to your frontend domain (e.g., https://example.com)
# Development: Use * for testing, but restrict in production
CORS_ORIGIN=*
