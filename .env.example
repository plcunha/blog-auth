# ========================================
# Blog Auth API - Environment Variables
# ========================================
# Copy this file to .env and fill in the values

# Application
NODE_ENV=development
PORT=3000

# Database
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=blog
DB_SYNCHRONIZE=false

# JWT
JWT_SECRET=change-this-to-a-very-strong-random-secret
JWT_EXPIRATION=3600s
